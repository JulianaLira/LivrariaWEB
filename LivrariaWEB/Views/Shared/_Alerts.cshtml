@using LivrariaWEB.Infra;

@{
    if (TempData.ContainsKey(Alert.TempDataKey))
    {
        if (TempData[Alert.TempDataKey] != null)
        {
            var alert = TempData.Get<Alert>(Alert.TempDataKey);

            var dismissableClass = alert.Dismissable ? "alert-dismissable" : null;
            <div class="mt-2 alert alert-@alert.AlertStyle @dismissableClass">
                @if (alert.Dismissable)
                {
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                }
                @Html.Raw(alert.Message)
            </div>
        }
    }
}