@model Livro
@{
    Layout = null;
    var nome = Model.Nome;
}

<div class="modal-body">
    <form asp-action="ExcluirLivro" method="post" enctype="multipart/form-data" class="form-horizontal">
        <input asp-for="Id" class="form-control" hidden="" />
        <div class="form-group">
            <div class="text-left px-0">
                <p>Tem certeza que deseja excluir o Livro @nome?</p>
            </div>
        </div>
        <div class="row mt-lg-5">
            <div class="col-md-12 justify-content-end">
                <button type="submit" class="btn btn-warning">Excluir</button>
                
            </div>
        </div>
    </form>
</div>