@model LivroViewModel
@{
    Layout = null;
}

<div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-6"> 
                <label><strong> @Html.DisplayNameFor(modelItem => @Model.Autor):</strong></label>
                <label>@Model.Autor</label>
            </div>
            <div class="form-group col-md-6">
                <label><strong> @Html.DisplayNameFor(modelItem => @Model.Nome):</strong></label>
                <label>@Model.Nome</label>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label><strong> @Html.DisplayNameFor(modelItem => @Model.ISBN):</strong></label>
                <label>@Model.ISBN</label>
            </div>
            <div class="form-group col-md-6">
                <label><strong> @Html.DisplayNameFor(modelItem => @Model.Preco):</strong></label>
                <label>@Model.Preco</label>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label><strong> @Html.DisplayNameFor(modelItem => @Model.Data_Publicacao):</strong></label>
                <label>@Model.Data_Publicacao</label>
            </div>
        </div>
        @{ string img_src = @Model.Url_Imagem != null ? "https://" + @Context.Request.Host.Value + "/" + @Model.Url_Imagem : null;}

        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="button" style="background-color: transparent; border: none">
                    <img id="targetImg" src=@img_src class="rounded" alt="imagem" width="200" height="350">
                </button>
            </div>
        </div>
</div>